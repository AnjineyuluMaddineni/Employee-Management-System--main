@model PaginatedList<DepartmentViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- ✅ Success Message -->
@if (TempData["res"] is not null)
{
    <div class="d-flex justify-content-center mt-3">
        <div class="alert alert-success text-dark fw-bold shadow-lg rounded-pill px-4 py-2">
            <i class="fas fa-check-circle me-2"></i> @TempData["res"]
        </div>
    </div>
}

<!-- ✅ Create Button -->
@if (User.IsInRole("HR") || User.IsInRole("Admin"))
{
    <div class="d-flex justify-content-start mt-3">
        <a asp-action="Create" class="btn btn-success fw-bold shadow-lg rounded-pill px-3">
            <i class="fa-solid fa-plus me-1"></i> Create Department
        </a>
    </div>
}

<!-- ✅ Search Bar -->
<div class="container w-75 mt-3">
    <form asp-action="Index" method="get" class="input-group shadow-sm rounded-pill">
        <input class="form-control rounded-start-pill border-0 ps-3" type="search" name="value" placeholder="🔍 Search by name or code..." aria-label="Search">
        <button class="btn btn-primary rounded-end-pill px-4 fw-bold" type="submit">
            <i class="fas fa-search"></i>
        </button>
    </form>
</div>

@if (Model.Any())
{
    <!-- ✅ Header -->
    <div class="text-white text-center py-3 mt-4 rounded shadow-lg" style="background: linear-gradient(45deg, #2C3E50, #3498DB);">
        <h2 class="fw-bold"><i class="fas fa-building me-2"></i>All Departments</h2>
    </div>

    <!-- ✅ Table -->
    <div class="table-responsive">
        <table class="table table-hover text-center bg-white mt-3 shadow-sm rounded">
            <thead class="table-dark">
                <tr>
                    <th><i class="fas fa-barcode me-1"></i> Code</th>
                    <th><i class="fas fa-tag me-1"></i> Name</th>
                    <th><i class="fas fa-calendar-alt me-1"></i> Created Date</th>
                    @if (User.IsInRole("HR") || User.IsInRole("Admin"))
                    {
                        <th colspan="3"><i class="fas fa-cogs me-1"></i> Actions</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var x in Model)
                {
                    <tr class="align-middle">
                        <td>@x.Code</td>
                        <td class="fw-semibold">@x.Department_Name</td>
                        <td>@x.CreatedDate.ToString("dd-MMM-yyyy")</td>
                        @if (User.IsInRole("HR") || User.IsInRole("Admin"))
                        {
                            <td>
                                <a asp-action="Details" asp-route-id="@x.Id" class="btn btn-info btn-sm text-white shadow-sm rounded-pill px-3">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@x.Id" class="btn btn-warning btn-sm text-dark shadow-sm rounded-pill px-3">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </td>
                            <td>
                                <a asp-action="Delete" asp-route-id="@x.Id" class="btn btn-danger btn-sm text-white shadow-sm rounded-pill px-3">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <!-- ✅ Empty State -->
    <div class="w-75 mx-auto p-4 mt-5 bg-light text-dark text-center shadow-lg rounded">
        <h2 class="fw-bold"><i class="fas fa-exclamation-circle text-danger me-2"></i>No Departments Found</h2>
        <p class="text-muted">Try adjusting your search or create a new department.</p>
    </div>
}

<!-- ✅ Pagination -->
@if (Model.TotalPages > 1)
{
    <nav aria-label="Page navigation" class="mt-4">
        <ul class="pagination justify-content-center">

            <!-- Previous -->
            @if (Model.HasPreviousPage)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index"
                       asp-route-value="@Context.Request.Query["value"]"
                       asp-route-pageNumber="@(Model.PageIndex - 1)">
                        Previous
                    </a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <span class="page-link">Previous</span>
                </li>
            }

            <!-- Page Numbers -->
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                if (i == Model.PageIndex)
                {
                    <li class="page-item active">
                        <span class="page-link">@i</span>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index"
                           asp-route-value="@Context.Request.Query["value"]"
                           asp-route-pageNumber="@i">@i</a>
                    </li>
                }
            }

            <!-- Next -->
            @if (Model.HasNextPage)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index"
                       asp-route-value="@Context.Request.Query["value"]"
                       asp-route-pageNumber="@(Model.PageIndex + 1)">
                        Next
                    </a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <span class="page-link">Next</span>
                </li>
            }
        </ul>
    </nav>
}

